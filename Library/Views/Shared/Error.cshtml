@using Library.Models.BaseModels;
@model CustomModelError
@{
    ViewData["Title"] = "Error";
}
<style>
    body {
        background-image: url('/images/error-custom.svg');
        background-repeat: no-repeat;
        background-size: cover;
    }

    header  {
        display: none;
    }

    footer {
        display: none;
    }
    .center-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }
    .circle-container{
        display:none;
    }

    #back-to-home {
        background: rgb(220, 55, 65);
        font-size: 2em;
        border: 1px solid red;
        transition: background 0.3s, box-shadow 0.3s;
        border-radius: 25px;
    }

        #back-to-home:hover {
            background: #FF0B45;
            box-shadow: 0px 0px 12px 5px;
        }

    @@media (min-width: 576px) {
        #second-layer-container h2,h4{
            text-align: end;
        }
    }

</style>
<div class="container center-container">
    <div class="row">
        <div class="col-12 col-sm-6 px-0">
            <img src="~/images/animated-person-for-error.svg" class="img-fluid" style="height:33rem;" />
        </div>
        <div class="col-12 col-sm-6 px-0" id="second-layer-container" style="text-align:end">
            <div class="d-flex flex-column justify-content-between h-100">
                <div class="d-flex justify-content-center align-items-center flex-grow-1">
                    <div class="col-12 p-0 m-0">
                        <div class="h1 d-flex justify-content-center justify-content-sm-end">Грешка @Model.StatusCode</div>
                        <div class="h2 d-flex justify-content-center justify-content-sm-end" style="color:red">@Model.CustomErrorMessage</div>
                        <div class="h4 d-flex justify-content-center justify-content-sm-end">Упс!</div>
                        <div class="h4 d-flex justify-content-center justify-content-sm-end">Изглежда има грешка.</div>
                        <div class="h4 d-flex justify-content-center justify-content-sm-end">В момента работим по нея.</div>
                    </div>
                </div>
                <div class="mt-auto text-right mx-5 mx-sm-0 pt-2">
                    <a class="btn col-12 col-sm-8 btn-warning" id="back-to-home" asp-area="" asp-controller="Home" asp-action="MainPage">Назад</a>
                </div>
            </div>
        </div>

    </div>
</div>