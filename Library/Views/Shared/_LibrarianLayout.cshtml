@using System.Reflection;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library</title>
    <!-- FONTS -->
    <link rel="stylesheet" href="~/library/fonts/flaticon/flaticon.css">
    <script type="text/javascript" src="https://kit.fontawesome.com/47edf10d0e.js"></script>
    <!-- VENDOR -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
    <!--ALERTS-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    @RenderSection("Styles", false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Library</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Librarian" asp-action="AllBooksInformation">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Librarian" asp-action="Report">Report</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Library - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!--=====================================
                   JS LINK PART START
       =======================================-->
    <!-- VENDOR -->
    <script src="~/library/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/library/js/vendor/popper.min.js"></script>
    <script src="~/library/js/vendor/bootstrap.min.js"></script>
    <script src="~/library/js/vendor/slick.min.js"></script>
    <!-- CUSTOM -->
    <!-- PAGES -->
    <script src="~/library/js/pages.js"></script>

    <!-- COMMON -->
    <script src="~/library/js/common.js"></script>

    <!-- CUSTOM -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script src="https://js.stripe.com/v3/"></script>

    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.js"></script>


    <script type="text/javascript">
        $(function () {
            clientManagement.init($('.client-management'));
            editStaffInformation.init($('.edit-staff-information'));
            addABook.init($('.add-a-book'));
            addACategory.init($('.manage-book-categories'));
        });
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
