@using System.Reflection;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Litify</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="icon" type="image/png" src="/images/litify-logo.png" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script type="text/javascript" src="https://kit.fontawesome.com/47edf10d0e.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css">

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">

    <!--ALERTS-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="~/library/css/custom/MainLayout.css" asp-append-version="true">
    <link rel="stylesheet" href="~/library/css/custom/ImagePost.css" asp-append-version="true">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    @RenderSection("Styles", false)
</head>
<body>
    <header>
        <nav id="navbar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow m-0 p-0 pt-2 pl-2 mb-3">
            <div class="container-fluid">
                <a class="navbar-brand p-0 m-0 pb-1" asp-area="" asp-controller="Home" asp-action="MainPage">
                    <img src="~/images/litify-logo.png" style="width:65px" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="p-3 navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav align-items-center flex-grow-1 pl-2">
                        <li class="nav-item">
                            <a class="nav-link nav-item fontawesome-icons" asp-area="" asp-controller="Home" asp-action="Borrowed">
                                <i class="fa-solid fa-book-open-reader fa-2xl"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-item fontawesome-icons" asp-area="" asp-controller="Home" asp-action="Notifications">
                                <i class="fa-regular fa-bell fa-2xl"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-item fontawesome-icons" id="signIn">
                                <i class="fa-solid fa-user-lock fa-2xl"></i>
                            </a>
                            <div class="sign-in-container">
                                <div class="container">
                                    <div class="row">
                                        <div class="row">
                                            <label for="email">Email:</label>
                                        </div>
                                        <div class="col">
                                            <input type="email" id="email" placeholder="Enter your email" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="row">
                                            <label for="password">Password:</label>
                                        </div>
                                        <div class="col">
                                            <input type="password" id="password" placeholder="Enter your password" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-4">
                                            <button type="button" class="btn btn-primary">Sign In</button>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-8">
                                            <p>Don't have an account? <a href="/register">Register here</a></p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-7">
                                            <button type="button" class="btn btn-danger">Log in with Google</button>
                                        </div>
                                        <div class="col-md-7">
                                            <button type="button" class="btn btn-primary">Log in with Facebook</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>

                        @*  @if (User?.Identity != null && User.Identity.IsAuthenticated && (User.IsInRole("Admin") ||User.IsInRole("Worker")|| User.IsInRole("SuperAdmin")))
                        { *@
                        <li class="nav-item">
                            <a class="nav-link nav-item fontawesome-icons" asp-area="" asp-controller="Librarian" asp-action="AllBooksInformation">
                                <i class="fa-solid fa-book fa-2xl"></i>
                            </a>
                        </li>
                        @* } *@

                        @*  @if (User?.Identity != null && User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("SuperAdmin")))
                        { *@
                        <li class="nav-item">
                            <a class="nav-link nav-item fontawesome-icons" asp-area="" asp-controller="Admin" asp-action="Statistics">
                                <i class="fa-solid fa-lock fa-2xl"></i>
                            </a>
                        </li>
                        @* } *@
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Library - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>
    <script src="~/library/js/customJS/mainLayout.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
