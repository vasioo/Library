@using Library.Models.BaseModels;
@using System.Web;
@model Document
<style>
    .custom-container {
        background-color: #ffffff;
        box-shadow: 0px 8px 20px 0px rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        padding: 20px;
    }
</style>
<div class="document-page py-5">
    <div class="container custom-container">
        <div class="row display-1 col-12 text-center justify-content-center pt-5">@Model.Title</div>
        <hr class="py-1" style="color:#00d1d1"/>
        <br />
        <div class="row">
            @Html.Raw(Model.Content)
        </div>
    </div>
</div>