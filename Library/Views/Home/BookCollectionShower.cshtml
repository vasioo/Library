@using Library.Models.ViewModels;
@model BookCollectionShowerViewModel

<style>
    .category-names:hover {
        color: black;
        text-decoration: none;
    }

    .scroller-title {
        color: rgba(7,175,211,1);
    }

</style>

<div class="book-collection-shower">
    <div class="container">
        <div class="row">
            <div class="row h2">Explore our genres</div>
            <div class="row h4">Everything for everyone</div>
        </div>
        <hr />
    </div>
    <div class="container pt-3">
        <div class="row h3 justify-content-center scroller-title">Categories</div>
        <hr />
        <div class="row">
            @if (Model != null)
            {
                @foreach (var subject in Model.BookSubjects)
                {
                    <div class="col-md-4">
                        <div class="h3">@subject.SubjectName</div>
                        <ul class="list-unstyled">
                            @foreach (var category in subject.BookCategories)
                            {
                                <li>
                                    <a class="category-names" asp-action="BookShower" asp-controller="Home" data-category="@category">@category.CategoryName</a>
                                </li>
                            }
                        </ul>
                    </div>
                }
            }
        </div>

    </div>

    @if (Model != null)
    {
        @if (Model.BestSellers != null && Model.BestSellers.Count() > 0)
        {
            <div class="container pt-5">
                <div class="row">
                    <div class="row scroller-title h3 justify-content-center">Recommended Books</div>
                    <hr />
                    @foreach (var book in Model.RecommendedBooks)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            @await Html.PartialAsync("~/Views/Home/_BookShowerPartial.cshtml", book)
                        </div>
                    }
                </div>
            </div>
        }
    }
    @if (Model != null)
    {
        @if (Model.BestSellers != null && Model.BestSellers.Count() > 0)
        {
            <div class="container pt-5">
                <div class="row">
                    <div class="row scroller-title h3 justify-content-center">Best Sellers</div>
                    <hr />
                    @foreach (var book in Model.BestSellers)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            @await Html.PartialAsync("~/Views/Home/_BookShowerPartial.cshtml", book)
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>