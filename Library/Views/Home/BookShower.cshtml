@using Library.Models.ViewModels;
@model BookShowerViewModel

<style>
    .scroller-title {
        color: rgba(7,175,211,1);
    }

    .custom-container {
        background-color: #ffffff;
        box-shadow: 0px 8px 20px 0px rgba(0, 0, 0, 0.5);
        border-radius: 10px;
        padding: 20px;
    }
    .book-shower{
        background: url('/images/book-shower-bg.svg');
    }
</style>

<div class="book-shower py-3">
    <div class="container custom-container">
        <div class="row justify-content-center py-5">
            <div class="h1 text-center  scroller-title">@Model.CategorySortBy.CategoryName</div>
            <hr class="py-1" style="color:orange; width:80%" />
        </div>

        <div class="row">
            @foreach (var book in Model.Books)
            {
                <div class="col-md-6 col-12 mb-4">
                    @await Html.PartialAsync("~/Views/Home/_BookShowerPartial.cshtml", book)
                </div>
            }
        </div>
        @if (Model.BestSellers != null && Model.BestSellers.Count() > 0)
        {
            <div class="row pt-5">
                <div class="row scroller-title h3 justify-content-center">Препоръчани книги</div>
                <hr />
                @foreach (var book in Model.RecommendedBooks)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        @await Html.PartialAsync("~/Views/Home/_BookShowerPartial.cshtml", book)
                    </div>
                }
            </div>
        }
        @if (Model.BestSellers != null && Model.BestSellers.Count() > 0)
        {
            <div class="row pt-5">
                <div class="row scroller-title h3 justify-content-center">Най-търсени</div>
                <hr />
                @foreach (var book in Model.BestSellers)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        @await Html.PartialAsync("~/Views/Home/_BookShowerPartial.cshtml", book)
                    </div>
                }
            </div>
        }
    </div>
</div>