@using Library.Models.ViewModels;
@model BorrowedViewModel

<div class="borrowed-page">
    <div class="container pt-3">
        @if (Model.BorrowedBooks != null )
        {
            if (Model!.BorrowedBooks!.Count() > 0)
            {
                <div class="row justify-content-center h3 scroller-title">
                    Книги назаем
                </div>
                <hr />

                @foreach (var book in Model.BorrowedBooks)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        @await Html.PartialAsync("~/Views/Home/_BorrowedBookPartial.cshtml", book)
                    </div>
                }
            }
            else
            {
                <h1 class="text-center py-5 mb-4 scroller-title">Нямате взети книги назаем!</h1>
                <hr />
            }
        }
        else
        {
            <h1 class="text-center py-5 mb-4 scroller-title">Нямате взети книги назаем!</h1>
            <hr />
        }
        @if (Model.BestSellers != null && Model.BestSellers.Count() > 0)
        {
            <div class="container pt-5">
                <div class="row">
                    <div class="row scroller-title h3 justify-content-center">Препоръчани книги</div>
                    <hr />
                    @foreach (var book in Model.RecommendedBooks)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            @await Html.PartialAsync("~/Views/Home/_BookShowerPartial.cshtml", book)
                        </div>
                    }
                </div>
            </div>
        }
        @if (Model.BestSellers != null && Model.BestSellers.Count() > 0)
        {
            <div class="container pt-5">
                <div class="row">
                    <div class="row scroller-title h3 justify-content-center">Най-търсени</div>
                    <hr />
                    @foreach (var book in Model.BestSellers)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            @await Html.PartialAsync("~/Views/Home/_BookShowerPartial.cshtml", book)
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>