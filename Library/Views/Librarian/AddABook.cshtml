@using Library.Models.BaseModels;
@model Book


<div class="container">
    <h2>Add Book</h2>

    <div id="addBookForm">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="DateOfBookCreation"></label>
            <input asp-for="DateOfBookCreation" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Genre.CategoryName"></label>
            <select asp-for="Genre.CategoryName" asp-items="@(new SelectList(ViewBag.GenreList, "Value", "Text"))" class="form-control">
                <option value="">Select Genre</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="AvailableItems"></label>
            <input asp-for="AvailableItems" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NeededMembership"></label>
            <input asp-for="NeededMembership" class="form-control" />
        </div>
        <button id="addBookButton" class="btn btn-primary">Add Book</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</div>