@page
@model IndexModel
@{
    ViewData["Title"] = "Имейл";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<style>


    .custom-container {
        background-color: #ffffff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        padding: 20px;
        background-image: url("/images/account-background.jpg");
        background-size: cover;
    }

    .img-container {
        text-align: center;
    }

    .img-thumbnail {
        width: 150px;
        height: 150px;
        border-radius: 50%;
    }

    .form-group {
        margin-bottom: 20px;
    }

    form label {
        font-weight: 700;
    }

</style>
<div class="custom-container">
    <div class="row justify-content-center">
        <div class="col-11">
            <h2 class="py-3">Профил</h2>
        </div>
    </div> 
    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="row ">
        <div class="col-md-4 img-container">
            <img src="path/to/your/image.jpg" alt="User Image" class="img-thumbnail" />
        </div>
        <div class="col-md-8">
            <form method="post" asp-page-handler="EditInfo">
                <div class="form-group d-flex justify-content-around">
                    <div class="col-5">
                        <label asp-for="FirstName">Име</label>
                        <input type="text" class="form-control" asp-for="FirstName" value="@Model.Username" />
                    </div>
                    <div class="col-5">
                        <label asp-for="LastName">Фамилия</label>
                        <input type="text" class="form-control" asp-for="LastName" value="@Model.Username" />
                    </div>
                </div>
                <div class="form-group d-flex justify-content-around">
                    <div class="col-5">
                        <label asp-for="Username">Потребителско име</label>
                        <input type="text" class="form-control" asp-for="Username" value="@Model.Username" />
                    </div>
                    <div class="col-5">
                        <label asp-for="Email">Имейл</label>
                        <input type="text" class="form-control" asp-for="Email" value="@Model.Email" />
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success col-11">Запази промените</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}