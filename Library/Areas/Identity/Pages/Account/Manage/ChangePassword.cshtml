@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<style>
    .custom-container {
        background-color: #ffffff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        padding: 20px;
    }

    form label {
        font-weight: 700;
        font-size: 1.2rem;
    }

    .custom-confirm {
        transition: background-color 0.3s, color 0.3s, box-shadow 0.3s;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        background: #00d1d1;
        font-size: 1.3rem;
    }

        .custom-confirm:hover {
            background-color: #008b8b;
            color: white;
            box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.2);
        }
</style>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="custom-container">
    <div class="row justify-content-center">
        <h1 class="text-center">Смяна на парола</h1>
    </div>
    <hr />
    <div class="row justify-content-around align-items-center">
        <div class="col-md-5">
            <form id="change-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group mb-3">
                    <label asp-for="Input.NewPassword" class="form-label">Нова Парола</label>
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" placeholder="Моля въведете новата си парола." />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Потвърждавам нова парола</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Моля въведете новата си парола отново." />
                </div>
                <button type="submit" class=" w-100 btn btn-lg btn-dark custom-confirm">Потвърждавам промяната</button>
            </form>
        </div>
        <div class="col-md-5">
            <img src="~/images/forgot-password.svg" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
